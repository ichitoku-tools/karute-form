  <script>
    function updateCourseInfo() {
      const momi = document.getElementById('momi')?.value || '';
      const ashi = document.getElementById('ashi')?.value || '';
      const aroma = document.getElementById('aroma')?.value || '';
      const selected = [momi, ashi, aroma].filter(Boolean);
      const total = selected.reduce((sum, val) => {
        const minMatch = val.match(/\\d+/);
        const min = minMatch ? parseInt(minMatch[0]) : 0;
        return sum + min;
      }, 0);
      document.getElementById('selected-courses').textContent = selected.length ? selected.join(' / ') : 'ãªã—';
      document.getElementById('total-time').textContent = total;
      document.getElementById('course-hidden').value = selected.join(', ');
    }

    function showNotification(text) {
      const noti = document.getElementById('notification');
      const message = document.getElementById('notification-message');
      const okButton = document.getElementById('notification-ok');
      message.textContent = text;
      noti.style.display = 'block';
      noti.style.opacity = 0;
      setTimeout(() => {
        noti.style.opacity = 1;
      }, 10);
      if (text.includes('é€ä¿¡ã—ã¾ã—ãŸ')) {
        okButton.style.display = 'inline-block';
      } else {
        setTimeout(() => {
          noti.style.opacity = 0;
          setTimeout(() => {
            noti.style.display = 'none';
          }, 500);
        }, 3000);
      }
    }

    document.getElementById('recordForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      const form = e.target;
      const formData = new FormData(form);
      try {
        const res = await fetch('https://script.google.com/macros/s/AKfycbwSasilsnirNVMePpBDTPdOtxH_DAaqjTFT5U7iOKJgxqf_C73Pc47vUq1zh5t6XQfbNQ/exec', {
          method: 'POST',
          body: formData
        });
        const text = await res.text();
        if (text === 'OK') {
          showNotification('âœ¨é€ä¿¡ã—ã¾ã—ãŸï¼è¨˜éŒ²ãŠã¤ã‹ã‚Œã•ã¾ã§ã—ãŸ');
          updateCourseInfo();
        } else {
          showNotification('âš ï¸é€ä¿¡ã§ãã¾ã›ã‚“ã§ã—ãŸã€‚ã‚‚ã†ä¸€åº¦ãŠè©¦ã—ãã ã•ã„');
        }
      } catch (error) {
        showNotification('âš ï¸é€šä¿¡ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸã€‚ãƒãƒƒãƒˆæ¥ç¶šã‚’ã”ç¢ºèªãã ã•ã„');
      }
    });
  </script>
